<h1>Sign in</h1>

<%= form_with url: sign_in_path, data: { turbo: false } do |f|  %>

    <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.text_field :email, class: "form-control", placeholder: "you@you.com" %>
    </div>
    <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Your Password" %>
    </div>

    <div class="mb-3">
        <%= f.submit "Sign in", class: "btn btn-primary" %>
    </div>
<% end %>